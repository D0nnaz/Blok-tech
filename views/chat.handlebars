{{! chat.handlebars }}
<html>

<head>
  <meta charset="UTF-8" />
  <title>Chats page</title>
  <link rel="stylesheet" href="/static/css/style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
</head>

<body class="inchat">
  <header>
    <div class="profile-status-container">
      <a href="/" class="back">‚Üê Back</a>
      {{!-- <div class="status-indicator"></div> --}}
      <div class="profile-picture-container">
        <img src="{{profilePicture}}" alt="Profile Picture" />
      </div>
      <p>{{chatName}}</p>
    </div>
  </header>
  <div class=round-top></div>


  <section class="fallback-message">
    <h2>JavaScript Disabled Are you a fan of living in the Stone Age? Go ahead, enable JavaScript, and join us in the
      modern era!</h2>
    <img src="https://i.kym-cdn.com/entries/icons/mobile/000/018/259/55181940.jpg">
  </section>

  <div class="chat-box">
    {{#each messages}}
    {{#if (isRightBubble this)}}
    <div class="chat-bubble right-bubble">{{this.content}}</div>
    {{else}}
    <div class="chat-bubble left-bubble">{{this.content}}</div>
    {{/if}}
    {{/each}}
  </div>

  <div class="input-bar">
    <form id="input-form" action="/chat/{{chatName}}/message" method="POST">
      <input type="text" class="input-field" id="message-input" placeholder="Type a message..."
        aria-label="Type hier uw bericht" name="message" autocomplete="off" />

      <button class="send-button" type="submit">Send</button> <!-- type-attribuut gewijzigd naar "submit" -->
    </form>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
</body>

</html>